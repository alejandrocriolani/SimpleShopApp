@model IEnumerable<User>

@{
    ViewData["Title"] = "Administración - Usuarios";
}

<div class="bg-primary m-1 p-1 text-white"><h4>@ViewData["Title"]</h4></div>
<div class="bg-info p-1 text-white"><h5>Cuentas de usuarios</h5></div>
<table class="table table-sm table-bordered table-striped table-hover">
    <tr><th>ID</th><th>Nombre de usuario</th><th>Email</th><th>Editar</th><th>Borrar</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><th colspan="5" class="text-center">No hay cuentas de usuario</th></tr>
    }
    else
    {
        foreach (User user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Editar</a>
                </td>
                <td>
                    <form asp-controller="Account" asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Borrar
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a asp-action="Index" class="btn btn-primary text-white">Volver</a>