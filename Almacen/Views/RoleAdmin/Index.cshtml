@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Administrar permisos";
}

<div class="bg-primary p-1 m-1 text-white"><h4>@ViewData["Title"]</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-sm">
    <tr><th>ID</th><th>Nombres</th><th>Cantidad de usuarios</th><th>Acciones</th></tr>
    @if(Model.Count() == 0)
    {
        <tr><td colspan="4">No hay roles></td></tr>
    }
    else
    {
        foreach(IdentityRole role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary">Editar</a>
                </td>
            </tr>
        }
    }
</table>

<a asp-controller="Admin" asp-action="Index" class="btn btn-primary text-white">Volver</a>